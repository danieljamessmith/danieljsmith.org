---
import Layout from '~/layouts/Layout.astro';

const sites = [
  {
    title: 'Tuition',
    description: 'Bespoke Mathematics & Physics tuition from GCSE to University. Entrance exams and admissions consultation.',
    href: 'https://tuition.danieljsmith.org',
    subdomain: 'tuition.danieljsmith.org',
    theme: 'green',
  },
  {
    title: 'Resources',
    description: 'Free TMUA practice papers and answer keys. Prepare for your University admissions test.',
    href: 'https://resources.danieljsmith.org',
    subdomain: 'resources.danieljsmith.org',
    theme: 'blue',
  },
];

const socialLinks = [
  {
    label: 'GitHub',
    href: 'https://github.com/danieljamessmith',
    icon: 'github',
  },
  {
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/daniel-j-smith/',
    icon: 'linkedin',
  },
];
---

<Layout title="danieljsmith.org">
  <div class="min-h-screen flex flex-col">
    <!-- Main Content -->
    <main class="flex-1 flex flex-col items-center justify-center px-4 py-16">
      <!-- Subtle header with logo/initials -->
      <header class="mb-12">
        <a href="/" class="inline-flex items-center gap-5 group">
          <img 
            src="/favicon.png" 
            alt="DJS" 
            class="w-24 h-24 rounded-xl shadow-sm group-hover:shadow-md transition-shadow"
          />
          <span class="text-xl font-medium text-gray-600 group-hover:text-gray-900 transition-colors">
            danieljsmith.org
          </span>
        </a>
      </header>

      <!-- Site Cards - Styled to preview their destinations -->
      <section class="grid md:grid-cols-2 gap-6 max-w-4xl w-full mb-16 items-stretch">
        {sites.map((site) => (
          <a
            href={site.href}
            class:list={[
              "group relative block rounded-2xl overflow-hidden transition-all duration-300 transform-gpu hover:-translate-y-1 hover:shadow-2xl h-full",
              site.theme === 'green' && "shadow-lg shadow-emerald-500/10 hover:shadow-emerald-500/20",
              site.theme === 'blue' && "shadow-lg shadow-blue-500/10 hover:shadow-blue-500/20",
            ]}
          >
            {/* Card background matching destination site */}
            <div class:list={[
              "absolute inset-0",
              site.theme === 'green' && "bg-gradient-to-br from-emerald-50 via-emerald-100/80 to-teal-100",
              site.theme === 'blue' && "bg-gradient-to-br from-slate-600 via-slate-700 to-indigo-800",
            ]} />
            
            {/* Decorative gradient orb */}
            <div class:list={[
              "absolute -top-10 -right-10 w-40 h-40 rounded-full blur-2xl opacity-40 group-hover:opacity-60 transition-opacity",
              site.theme === 'green' && "bg-gradient-to-br from-emerald-400 to-teal-400",
              site.theme === 'blue' && "bg-gradient-to-br from-blue-400 to-indigo-400",
            ]} />
            
            {/* Card content */}
            <div class:list={[
              "relative p-8 rounded-2xl flex flex-col h-full",
              site.theme === 'green' && "border border-emerald-200/50",
              site.theme === 'blue' && "",
            ]}>
              <h2 class:list={[
                "text-2xl font-bold mb-3 transition-colors",
                site.theme === 'green' && "text-gray-900 group-hover:text-emerald-700",
                site.theme === 'blue' && "text-white group-hover:text-blue-300",
              ]}>
                {site.title}
              </h2>
              <p class:list={[
                "mb-6 leading-relaxed flex-1",
                site.theme === 'green' && "text-gray-600",
                site.theme === 'blue' && "text-slate-300",
              ]}>
                {site.description}
              </p>
              
              {/* Bottom row with arrow and subdomain */}
              <div class="flex items-end justify-between">
                {/* Arrow indicator */}
                <div class:list={[
                  "inline-flex items-center gap-2 text-sm font-medium transition-all group-hover:gap-3",
                  site.theme === 'green' && "text-emerald-600",
                  site.theme === 'blue' && "text-blue-400",
                ]}>
                  <span>Visit site</span>
                  <span class="transition-transform group-hover:translate-x-1">â†’</span>
                </div>
                
                {/* Subdomain URL */}
                <span class:list={[
                  "text-sm font-mono opacity-70 group-hover:opacity-100 transition-opacity",
                  site.theme === 'green' && "text-emerald-700",
                  site.theme === 'blue' && "text-blue-300",
                ]}>
                  {site.subdomain}
                </span>
              </div>
            </div>
          </a>
        ))}
      </section>
    </main>

    <!-- Footer with Social Links -->
    <footer class="border-t border-slate-200 bg-slate-100/50">
      <div class="max-w-4xl mx-auto px-4 py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-slate-500">
          &copy; {new Date().getFullYear()} Daniel James Smith
        </p>
        <div class="flex gap-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
              class="flex items-center gap-2 text-sm text-slate-500 hover:text-slate-900 transition-colors"
            >
              {link.icon === 'github' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              <span>{link.label}</span>
            </a>
          ))}
        </div>
      </div>
    </footer>
  </div>
</Layout>
